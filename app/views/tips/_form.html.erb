<div class="container">
  <%= form_for @tip do |f| %>
    <div class="form-group">
      <%= f.label :city %>
      <%= f.collection_select :city_id, City.order(:name),:id,:name, include_blank: false, selected: @selected_city %>
    </div>
    <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, placeholder: "Title", class: "form-control", autofocus: true, :required => true %>
    </div>
    <div class="form-group">
    <%= f.label :body %>
    <%= f.text_field :body, placeholder: "Content", class: "form-control", autofocus: true, :required => true %>
    <div class="actions">
    <%= f.submit "Save Post", class: "btn btn-block btn-primary" %>
    </div>
  <% end %>
</div>
