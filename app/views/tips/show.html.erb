<div class="container">
  <div class = "row">
   <div class="col-md-4">
     <div class="img-thumbnail">
       <%= image_tag @author.profile_image %>

       <h3><strong> <%= @author.first_name.titleize %> <%= @author.last_name.titleize %></strong></h3>
       <p><strong>Date Joined: </strong><%= (@author.created_at).strftime("%m/%d/%Y") %></p>
       <p><strong>City: </strong> <%= @author.current_city.titleize %></p>

     </div>
    </div>
  <div class="col-md-8">

     <h3><%= @tip.title.titleize %></h3>
     <%= link_to @city.name.titleize, city_path(@city) %>
     <p><%= @tip.body %></p>
     <br>
     <%= button_to "Edit", edit_tip_path(@tip), :method => "get", class: "btn btn-primary" %>

     <br>
     <%= button_to "Delete tip", tip_path(@tip), :method => 'delete', :data => {:confirm => 'Are you sure you want to delete this post?'},  class: "btn btn-danger" %>
   </div>
 </div>
</div>
