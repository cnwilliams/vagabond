<div class="container">
  <div class = "row">
   <div class="col-md-4">
     <div class="img-thumbnail">
       <%= image_tag @author.profile_image %>
     </div>
     <h3><strong> <%= @author.first_name %> <%= @author.last_name %></strong></h3>
     <p><strong>Date Joined: </strong><%= (@author.created_at).strftime("%m/%d/%Y") %></p>
     <p><strong>City: </strong> <%= @author.current_city %></p>
   </div>
   <div class="col-md-8">
     <h3><%= @tip.title %></h3>
     <p><%= @tip.body %></p>
     <br>
     <%= link_to "Delete tip", tip_path(@tip), :method => 'delete', :data => {:confirm => 'Are you sure you want to delete this post?'} %>
  </div>
</div>
