<%= form_for([@tip, @tip.comments.build]) do |f| %>
  <div class="form-group">
    <p>
      <%= f.text_area :content, class: "featured", placeholder: "Much helpful, such goodness..."%>
    </p>
  </div>
  <div class="actions">
      <p>
      <%= f.submit class: "btn tip-button"%>
    </p>
  </div>
<% end %>
