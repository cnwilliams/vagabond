<div class="container">
  <% if current_user && current_user == @user %>
	  <h3><strong>Welcome <%= @user.first_name.capitalize %>!</strong></h3>
    <hr>
    <p><strong>Name:</strong> <%= @user.first_name %> <%= @user.last_name %> </p>
    <p><strong>Email:</strong> <%= @user.email %></p>
    <p><strong>Current City:</strong> <%= @user.current_city %></p>
	  <p class="small text-muted"><%= (@user.created_at).strftime("Thank you for being a user since %m/%d/%Y") %></p>
  <% else %>
    <h3><strong><%= @user.first_name.capitalize %>'s Profile</strong></h3>
    <hr>
    <p><strong>Name:</strong> <%= @user.first_name %> <%= @user.last_name %> </p>
    <p><strong>Email:</strong> <%= @user.email %></p>
    <p><strong>Current City:</strong> <%= @user.current_city %></p>
	  <p class="small text-muted">Joined on <%= (@user.created_at).strftime("%m/%d/%Y") %></p>
  <% end %>

  <hr>
  <br>
  <h4>Tips!</h4>

  <% @user.tips.each do |tip| %>
    <%= link_to tip.title, tip_path(tip) %>
  <% end %>
</div>
