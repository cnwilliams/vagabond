<h3> <%= @city.name %></h3>
<img class='banner-img' src=<%= @city.photo%>>

<br>
<br>
<div class="container">
  <div class="row">
     <div class="card group">
      <div class="col-md-4">
        <div class="card-block">
          <% @city.tips.order(created_at: :desc).each do |tip|%>
            <strong><%= link_to tip.title.titleize, tip_path(tip) %></strong>
            by <%= link_to "#{tip.user.first_name} #{tip.user.last_name}", user_path(tip.user) %>
            </p>
            <br>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <%= button_to "Add New #{tip_rename}", new_tip_path, method: "get"%>
  </div>
</div>
