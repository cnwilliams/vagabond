<div class="jumbotron">
  <%= image_tag("lvg_by_yanyinchoy.png", width: "100%", class:"img-fluid", alt:"homepage photo") %>
</div>

<div class="container">
  <h1 class="text-center homepage-tagline">Discover Hints About Your Favorite Cities</h1>
</div>
<br>

<% @cities.each do |city| %>
  <div class="card-group">
    <div class="col-md-4">
      <div class="card card-inverse">

        <div class= "img-wrapper">
          <%= image_tag city.photo, class: "card-img img-thumbnail", alt:"Card image cap" %>
        </div>

        <div class="card-img-overlay">
          <h3 class="card-title text-center city_caption_a">
            <%= link_to city.name.titleize, city_path(city) %>
          </h3>
        </div>
      </div>
    </div>
  </div>
<% end %>
